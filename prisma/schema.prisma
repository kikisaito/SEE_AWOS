// 1. Configuración
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- TABLAS PRINCIPALES ---

model User {
  userId          String    @id @default(uuid()) @map("user_id")
  email           String    @unique
  passwordHash    String    @map("password_hash")
  preferredName   String?   @map("preferred_name")
  createdAt       DateTime  @default(now()) @map("created_at")

  capsules        Capsule[]
  crisisSessions  CrisisSession[]
  victories       UserVictory[]

  @@map("users")
}

model Capsule {
  capsuleId       String    @id @default(uuid()) @map("capsule_id")
  userId          String    @map("user_id")
  title           String    @db.VarChar(150)
  
  contentType     ContentType @default(TEXT) @map("content_type")
  contentText     String?     @map("content_text") @db.Text
  s3Key           String?     @map("s3_key")

  isActive        Boolean   @default(true) @map("is_active")
  usageCount      Int       @default(0) @map("usage_count")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @default(now()) @updatedAt @map("updated_at")

  // RELACIONES
  user            User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  
  // CAMBIO CRÍTICO: Una cápsula puede servir para MUCHAS emociones
  targetEmotions  EmotionCatalog[] @relation("CapsuleEmotions")
  
  usedInCrisis    CrisisSession[]

  @@map("capsules")
}

model CrisisSession {
  crisisId        String    @id @default(uuid()) @map("crisis_id")
  userId          String    @map("user_id")
  
  // CAMBIO CRÍTICO: Una crisis puede tener MUCHAS emociones al inicio
  selectedEmotions EmotionCatalog[] @relation("CrisisEmotions")

  // DATOS DE REFLEXIÓN (Basado en image_8ebf40.png)
  intensityLevel  Int       @default(5) @map("intensity_level") // Aunque no salga en UI, lo pediste para reporte
  triggerDesc     String?   @map("trigger_description") @db.Text // "¿Qué pasó antes?"
  location        String?   @map("location") @db.VarChar(100)    // "Casa", "Trabajo", "Otro: Parque"
  companion       String?   @map("companion") @db.VarChar(100)   // "Solo/a", "Familia", "Otro: Novio"
  substanceUse    String?   @map("substance_use") @db.VarChar(50)// "No", "Si - Alcohol", etc.

  // ESTADO DE LA REFLEXIÓN (Para image_8ec302.png "Reflexiones pendientes")
  isReflectionCompleted Boolean @default(false) @map("is_reflection_completed")

  // Uso de herramientas
  usedCapsuleId   String?   @map("used_capsule_id")
  breathingExerciseCompleted Boolean @default(false) @map("breathing_exercise_completed")
  
  // Evaluación final ("Mejor", "Igual", "Peor")
  finalEvaluationId Int?    @map("final_evaluation_id")

  startedAt       DateTime  @default(now()) @map("started_at")
  endedAt         DateTime? @map("ended_at")

  // Relaciones
  user            User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  usedCapsule     Capsule?  @relation(fields: [usedCapsuleId], references: [capsuleId])
  finalEvaluation EvaluationScaleCatalog? @relation(fields: [finalEvaluationId], references: [evaluationId])

  @@map("crisis_sessions")
}

model UserVictory {
  victoryId       String    @id @default(uuid()) @map("victory_id")
  userId          String    @map("user_id")
  victoryTypeId   Int       @map("victory_type_id")
  occurredAt      DateTime  @default(now()) @map("occurred_at")

  user            User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  victoryType     VictoryTypeCatalog @relation(fields: [victoryTypeId], references: [victoryTypeId])

  @@map("user_victories")
}

// --- CATÁLOGOS ---

model EmotionCatalog {
  emotionId       Int       @id @default(autoincrement()) @map("emotion_id")
  name            String    @unique @db.VarChar(50)

  // Prisma crea automáticamente las tablas intermedias ("Pivot Tables")
  capsules        Capsule[]       @relation("CapsuleEmotions")
  crisisSessions  CrisisSession[] @relation("CrisisEmotions")

  @@map("emotions_catalog")
}

model VictoryTypeCatalog {
  victoryTypeId   Int       @id @default(autoincrement()) @map("victory_type_id")
  name            String    @unique @db.VarChar(50)
  victories       UserVictory[]

  @@map("victory_types_catalog")
}

model EvaluationScaleCatalog {
  evaluationId    Int       @id @default(autoincrement()) @map("evaluation_id")
  description     String    @unique @db.VarChar(50) // "Mejor", "Igual", "Peor"
  crisisSessions  CrisisSession[]

  @@map("evaluation_scales_catalog")
}

enum ContentType {
  TEXT
  AUDIO
}